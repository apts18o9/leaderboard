{
  "version": 2,
  "builds": [
    {
      "src": "leaderboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "leaderboard-frontend/build"
      }
    },
    {
      "src": "leaderboard-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "leaderboard-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "leaderboard-frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "leaderboard-frontend/build/index.html"
    }
  ]
}
