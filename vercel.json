{
  "version": 2,
  "builds": [
    {
      "src": "leaderboard-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "leaderboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "leaderboard-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "leaderboard-frontend/build/$1"
    }
  ]
}
